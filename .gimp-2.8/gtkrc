      gap_start_file = "ui/frame-gap-start.png"
      gap_start_border = { 1, 0, 0, 0 }
      gap_end_file = "ui/frame-gap-end.png"
      gap_end_border = { 0, 1, 0, 0 }
      shadow = ETCHED_OUT
    }
  }
}

